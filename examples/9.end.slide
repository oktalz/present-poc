.TITLE Graphs - chart.js - pie
.raw
<div style="height: 80svh;">
  <canvas id="myChart2"></canvas>
</div>
<script>
  const ctx2 = document.getElementById('myChart2');

  config = {
    type: 'pie',
    data: {
        labels: ['Red', 'Green', 'Blue'],
        datasets: [{
        label: 'My Dataset',
        data: [300, 50, 100],
        backgroundColor: ['red', 'green', 'blue']
        }]
    },
    options: {
        plugins: {

      legend: {
        labels: {
          font: {
            size: 64
          }
        }
      }
        }
    }
  };

  new Chart(ctx2, config);
</script>
.raw.end
