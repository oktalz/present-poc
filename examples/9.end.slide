<div style="height: 80svh;">
  <canvas id="myChart1"></canvas>
</div>
<script>
  const ctx1 = document.getElementById('myChart1');

  new Chart(ctx1, {
    type: 'bar',
    data: {
      labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'opt 1'],
      datasets: [{
        label: '# of Votes',
        data: [12, 19, 3, 5, 2, 4],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>
.raw.end
