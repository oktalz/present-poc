.global.font-size 4vh

.replace.after #dot# .
.replace.after -hashtag- #
.replace.after #backtick# `
.replace.after #equal# =

.template TITLE
.style "font-size: 3.5vh" ## {{ . }}
____________
.template.end

.template CAST_FOLDER
.cast {{ . }} go run .
.template.end

.template CAST
.cast.before go mod init x
.cast.block.edit main.go go run .
.template.end

.template CAST_FILE
.cast.block.edit {{ . }} go run .
.template.end

